<%= form_for(resource, as: resource_name,:html => {class:"form-signin"}, url: session_path(resource_name)) do |f| %>

  <div class="logo">
    <%= link_to image_tag("logo.jpg", alt: "Responsive image",:class => 'img-responsive'), '#' %>
  </div>
  <!---<div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true %></div>-->
   
  <%= f.text_field :username,class: "form-control", :autofocus => true , :placeholder=>"Username" %>
  <%= f.password_field :password, class: "form-control",autocomplete: "off" , :placeholder=>"Password" %>
  <%= f.submit "Login" , class: "btn btn-lg btn-login btn-block" %>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox"><%= f.check_box :remember_me ,  class: "css-checkbox" %> <%= f.label :remember_me , class: "css-label" %></div>
  <% end -%>

  
<% end %>

<%= render "devise/shared/links" %>

