<h3>Forgot your password?</h3>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post , class:"form-signin" }) do |f| %>
 
  <div class="logo">
    <%= link_to image_tag("logo.jpg", alt: "Responsive image",:class => 'img-responsive'), '#' %>
  </div>
  
   <%= devise_error_messages! %>
   
  
  <%= f.email_field :email, autofocus: true,class: "form-control" , :placeholder=>"Email" %>
  <%= f.submit "Reset password" , class: "btn btn-lg btn-login btn-block" %>
 
  <%- if controller_name != 'sessions' %>
  <div class="checkbox"><%= link_to "Sign in", new_session_path(resource_name) %></div>
	<% end -%>

<% end %>

